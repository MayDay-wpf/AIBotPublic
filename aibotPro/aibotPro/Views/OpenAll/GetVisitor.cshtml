@{
    ViewData["Title"] = "访客统计（Visitor）";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/system/chart/echarts.min.js"></script>
<div class="header">
    <div class="header-left">
        <a id="menuMain" href="" class="burger-menu">
            <i data-feather="menu">
            </i>
        </a>
        <a id="menuBack" href="" class="burger-menu d-none">
            <i data-feather="arrow-left">
            </i>
        </a>
    </div>
</div>
<div class="content-body" style="margin-top:10px;">
    <div class="card">
        <div class="card-header">
            <h5>数据总览</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6 col-md-3">
                    <h6 class="card-title">系统访问总数</h6>
                    <div class="d-flex align-items-center justify-content-between mg-b-10">
                        <h1 class="card-value" id="totalCount">--</h1>
                        <div class="chart-wrapper">
                            <div id="flotChart1" class="flot-chart"></div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3 mg-t-20 mg-sm-t-0">
                    <h6 class="card-title">系统今日访问数</h6>
                    <div class="d-flex align-items-center justify-content-between mg-b-10">
                        <h1 class="card-value" id="todayCount">--</h1>
                        <div class="chart-wrapper"><div id="flotChart2" class="flot-chart"></div></div>
                    </div>
                </div>
            </div>
        </div>
        <div id="lineChart" style="width: 100%; height: 400px;margin-top:100px;"></div>
    </div>
    <p></p>
    <div class="card">
        <div class="card-header">
            <h5>访客详情</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>IP地址</th>
                            <th>位置</th>
                            <th>时间</th>
                        </tr>
                    </thead>
                    <tbody id="ipList">
                        <tr>
                            <td>--</td>
                            <td>--</td>
                            <td>--</td>
                        </tr>
                    </tbody>
                </table>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item" id="first-page"><a class="page-link" href="#">首页</a></li>
                        <li class="page-item" id="previous-page"><a class="page-link" href="#">上一页</a></li>
                        <!-- 页码链接将在这里动态插入 -->
                        <li class="page-item" id="next-page"><a class="page-link" href="#">下一页</a></li>
                        <li class="page-item" id="last-page"><a class="page-link" href="#">尾页</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<script src="~/system/js/openall/getvisitor.js"></script>