
@{
    ViewData["Title"] = "系统通知（Send）";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="header">
    <div class="header-left">
        <a id="menuMain" href="" class="burger-menu">
            <i data-feather="menu">
            </i>
        </a>
        <a id="menuBack" href="" class="burger-menu d-none">
            <i data-feather="arrow-left">
            </i>
        </a>
    </div>
</div>
<div class="content-body" style="margin-top:10px;">
    <div class="card">
        <div class="card-header">
            <h5>发送系统通知</h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="mailcontent">通知标题：</label>
                <input type="text" id="title" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="mailcontent">通知内容（支持HTML）：</label>
                <textarea id="content" class="form-control" style="height:200px;"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary send" onclick="send()">发送</button>
            </div>
        </div>
    </div>
    <p></p>
    <div class="card">
        <div class="card-header">
            <h5>通知记录</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>标题</th>
                        <th>内容</th>
                        <th>时间</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody id="noticeList">
                    <tr>
                        <td>--</td>
                        <td>--</td>
                        <td>--</td>
                        <td>--</td>
                    </tr>
                    </tbody>
                </table>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item" id="first-page">
                            <a class="page-link" href="#">首页</a>
                        </li>
                        <li class="page-item" id="previous-page">
                            <a class="page-link" href="#">上一页</a>
                        </li>
                        <!-- 页码链接将在这里动态插入 -->
                        <li class="page-item" id="next-page">
                            <a class="page-link" href="#">下一页</a>
                        </li>
                        <li class="page-item" id="last-page">
                            <a class="page-link" href="#">尾页</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<script src="~/system/js/openall/systemnotice.js?v1.0.0"></script>