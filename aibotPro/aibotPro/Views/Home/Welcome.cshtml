    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        window.addEventListener('scroll', function () {
            var scrollPosition = window.pageYOffset;
            var windowHeight = window.innerHeight;
            var fullPages = document.querySelectorAll('.full-page');

            fullPages.forEach(function (page, index) {
                var pageTop = page.offsetTop;
                var pageBottom = pageTop + page.offsetHeight;
                var scrollArrow = page.querySelector('.scroll-down');

                if (scrollPosition >= pageTop && scrollPosition < pageBottom) {
                    if (scrollArrow) {
                        scrollArrow.style.display = 'block';
                    }
                } else {
                    if (scrollArrow) {
                        scrollArrow.style.display = 'none';
                    }
                }

                if (index === fullPages.length - 1 && scrollPosition + windowHeight >= pageBottom) {
                    if (scrollArrow) {
                        scrollArrow.style.display = 'none';
                    }
                }
            });
        });

        document.querySelectorAll('.scroll-down').forEach(function (arrow) {
            arrow.addEventListener('click', function () {
                var currentPage = this.closest('.full-page');
                var nextPage = currentPage.nextElementSibling;
                if (nextPage) {
                    nextPage.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
