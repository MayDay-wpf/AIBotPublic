@{
    ViewData["Title"] = "插件市场（Market）";
    Layout = "_Layout";
}
<style>
    .systemPluginBox {
        border: 1px solid lightgray;
        padding: 10px;
        border-radius: 10px;
    }
</style>
<script src="/system/js/masonry.pkgd.min.js"></script>
<div class="header">
    <div class="header-left">
        <a id="menuMain" href="" class="burger-menu">
            <i data-feather="menu">
            </i>
        </a>
        <a id="menuBack" href="" class="burger-menu d-none">
            <i data-feather="arrow-left">
            </i>
        </a>
        @* <a href="#" class="header-help-link" onclick="DALLinfo()">
        <i data-feather="help-circle">
